<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="inventory_unit"
		transaction-type="JTA">
		<description>
			Persistence unit for Hibernate User Guide
		</description>
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

		<!-- osgi.jndi.service.name <jta-data-source>osgi:service/javax.sql.DataSource/(osgi.jndi.service.name=azadDS)</jta-data-source> 
			<jta-data-source>osgi:service/javax.sql.DataSource/(osgi.jndi.service.name=azadDS)</jta-data-source> 
			<jta-data-source>osgi:service/javax.sql.DataSource/(osgi.jndi.service.name=azadDS)</jta-data-source> -->
		<class>inventory.domain.ProductsBean</class>
		<class>inventory.domain.ProductMetaBean</class>
		<class>inventory.domain.CategoryBean</class>
		<class>inventory.domain.BrandBean</class>
		<class>inventory.domain.Order</class>
		<class>inventory.domain.OrderAddress</class>
		<class>inventory.domain.ItemBean</class>
		<class>inventory.domain.OrderItemBean</class>
		
		<properties>
			<property name="javax.persistence.jdbc.driver"
				value="org.postgresql.Driver" />

			<property name="javax.persistence.jdbc.url"
				value="jdbc:postgresql://127.0.0.1/azadPayments" />
 
 
			<property name="javax.persistence.jdbc.user"
				value="postgres" />

			<property name="javax.persistence.jdbc.password"
				value="madho1431" />
 
 				
<!-- 			 <property name="javax.persistence.jdbc.user" value="ubuntu" />
			  <property	name="javax.persistence.jdbc.password" value="asanlife_#" /> 
 -->
		
 			<property name="hibernate.dialect"
				value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.show_sql" value="true" />

			<property name="hibernate.hbm2ddl.auto" value="update" />

		</properties>

	</persistence-unit>

</persistence>
